    <script type="module">
        import { initializeApp } from 'https://www.gstatic.com/firebasejs/9.23.0/firebase-app.js';
        import { getFirestore, collection, doc, getDoc, setDoc, updateDoc } from 'https://www.gstatic.com/firebasejs/9.23.0/firebase-firestore.js';
        import { getAuth, signInWithPopup, GoogleAuthProvider, signOut as firebaseSignOut, onAuthStateChanged } from 'https://www.gstatic.com/firebasejs/9.23.0/firebase-auth.js';

        const firebaseConfig = {
            apiKey: "AIzaSyAAXr7parhL6wQuUzy4MPvVhV6-J53wzcA",
            authDomain: "pastelmovie-cac7a.firebaseapp.com",
            databaseURL: "https://pastelmovie-cac7a-default-rtdb.firebaseio.com",
            projectId: "pastelmovie-cac7a",
            storageBucket: "pastelmovie-cac7a.firebasestorage.app",
            messagingSenderId: "543294016464",
            appId: "1:543294016464:web:47162285ca02d3cfb587d5",
            measurementId: "G-LK2Q13294B"
        };

        const app = initializeApp(firebaseConfig);
        const db = getFirestore(app);
        const auth = getAuth(app);
        const provider = new GoogleAuthProvider();

        // ê´€ë¦¬ì íŒ¨ë„ í´ë˜ìŠ¤
        class AdminPanel {
            constructor() {
                this.currentTab = 'customer';
                this.customerData = [];
                this.businessData = [];
            }

            async initialize() {
                await this.loadData();
                this.updateStats();
                this.renderData();
                this.setupEventListeners();
            }

            async loadData() {
                try {
                    const customerDoc = await getDoc(doc(db, 'faqs', 'customer'));
                    const businessDoc = await getDoc(doc(db, 'faqs', 'business'));
                    
                    this.customerData = customerDoc.exists() ? (customerDoc.data().items || []) : [];
                    this.businessData = businessDoc.exists() ? (businessDoc.data().items || []) : [];
                } catch (error) {
                    console.error('ë°ì´í„° ë¡œë”© ì‹¤íŒ¨:', error);
                    this.showStatus('ë°ì´í„° ë¡œë”©ì— ì‹¤íŒ¨í–ˆìŠµë‹ˆë‹¤.', 'error');
                }
            }

            async addItem(type, item) {
                try {
                    this.showLoading(type, true);
                    
                    const newItem = {
                        id: Date.now(),
                        title: item.title,
                        content: item.content,
                        keywords: item.keywords,
                        exception: "",
                        createdAt: new Date().toISOString()
                    };

                    if (type === 'customer') {
                        this.customerData.push(newItem);
                        await setDoc(doc(db, 'faqs', 'customer'), { items: this.customerData });
                    } else {
                        this.businessData.push(newItem);
                        await setDoc(doc(db, 'faqs', 'business'), { items: this.businessData });
                    }

                    this.showStatus(`${type === 'customer' ? 'ê³ ê°ì§€ì›' : 'ì—…ë¬´ì§€ì›'} í•­ëª©ì´ ì¶”ê°€ë˜ì—ˆìŠµë‹ˆë‹¤.`, 'success');
                    this.updateStats();
                    this.renderData();
                    this.clearForm(type);
                    
                } catch (error) {
                    console.error('í•­ëª© ì¶”ê°€ ì‹¤íŒ¨:', error);
                    this.showStatus('í•­ëª© ì¶”ê°€ì— ì‹¤íŒ¨í–ˆìŠµë‹ˆë‹¤.', 'error');
                } finally {
                    this.showLoading(type, false);
                }
            }

            async deleteItem(type, id) {
                if (!confirm('ì •ë§ ì‚­ì œí•˜ì‹œê² ìŠµë‹ˆê¹Œ?')) return;
                
                try {
                    if (type === 'customer') {
                        this.customerData = this.customerData.filter(item => item.id !== id);
                        await setDoc(doc(db, 'faqs', 'customer'), { items: this.customerData });
                    } else {
                        this.businessData = this.businessData.filter(item => item.id !== id);
                        await setDoc(doc(db, 'faqs', 'business'), { items: this.businessData });
                    }

                    this.showStatus('í•­ëª©ì´ ì‚­ì œë˜ì—ˆìŠµë‹ˆë‹¤.', 'success');
                    this.updateStats();
                    this.renderData();
                    
                } catch (error) {
                    console.error('í•­ëª© ì‚­ì œ ì‹¤íŒ¨:', error);
                    this.showStatus('í•­ëª© ì‚­ì œì— ì‹¤íŒ¨í–ˆìŠµë‹ˆë‹¤.', 'error');
                }
            }

            setupEventListeners() {
                document.getElementById('customerForm').addEventListener('submit', (e) => {
                    e.preventDefault();
                    const formData = new FormData(e.target);
                    this.addItem('customer', {
                        title: document.getElementById('customerTitle').value,
                        content: document.getElementById('customerContent').value,
                        keywords: document.getElementById('customerKeywords').value
                    });
                });

                document.getElementById('businessForm').addEventListener('submit', (e) => {
                    e.preventDefault();
                    this.addItem('business', {
                        title: document.getElementById('businessTitle').value,
                        content: document.getElementById('businessContent').value,
                        keywords: document.getElementById('businessKeywords').value
                    });
                });
            }

            renderData() {
                this.renderCustomerData();
                this.renderBusinessData();
            }

            renderCustomerData() {
                const container = document.getElementById('customerList');
                if (this.customerData.length === 0) {
                    container.innerHTML = '<div style="padding: 40px; text-align: center; color: #666;">ë“±ë¡ëœ ê³ ê°ì§€ì› í•­ëª©ì´ ì—†ìŠµë‹ˆë‹¤.</div>';
                    return;
                }

                container.innerHTML = this.customerData.map(item => `
                    <div class="data-item">
                        <div class="data-info">
                            <h4>${item.title}</h4>
                            <p>${item.content}</p>
                            <span class="data-keywords">í‚¤ì›Œë“œ: ${item.keywords}</span>
                        </div>
                        <div class="data-actions">
                            <button class="btn btn-danger btn-sm" onclick="adminPanel.deleteItem('customer', ${item.id})">ì‚­ì œ</button>
                        </div>
                    </div>
                `).join('');
            }

            renderBusinessData() {
                const container = document.getElementById('businessList');
                if (this.businessData.length === 0) {
                    container.innerHTML = '<div style="padding: 40px; text-align: center; color: #666;">ë“±ë¡ëœ ì—…ë¬´ì§€ì› í•­ëª©ì´ ì—†ìŠµë‹ˆë‹¤.</div>';
                    return;
                }

                container.innerHTML = this.businessData.map(item => `
                    <div class="data-item">
                        <div class="data-info">
                            <h4>${item.title}</h4>
                            <p>${item.content}</p>
                            <span class="data-keywords">í‚¤ì›Œë“œ: ${item.keywords}</span>
                        </div>
                        <div class="data-actions">
                            <button class="btn btn-danger btn-sm" onclick="adminPanel.deleteItem('business', ${item.id})">ì‚­ì œ</button>
                        </div>
                    </div>
                `).join('');
            }

            updateStats() {
                document.getElementById('customerCount').textContent = this.customerData.length;
                document.getElementById('businessCount').textContent = this.businessData.length;
                document.getElementById('totalCount').textContent = this.customerData.length + this.businessData.length;
            }

            showLoading(type, show) {
                document.getElementById(`${type}Loading`).style.display = show ? 'block' : 'none';
            }

            showStatus(message, type) {
                const statusEl = document.getElementById(`${this.currentTab}Status`);
                statusEl.className = `status-message status-${type}`;
                statusEl.textContent = message;
                statusEl.style.display = 'block';
                
                setTimeout(() => {
                    statusEl.style.display = 'none';
                }, 3000);
            }

            clearForm(type) {
                document.getElementById(`${type}Title`).value = '';
                document.getElementById(`${type}Content`).value = '';
                document.getElementById(`${type}Keywords`).value = '';
            }
        }

        // ì „ì—­ ë³€ìˆ˜
        window.adminPanel = new AdminPanel();

        // ì¸ì¦ ìƒíƒœ ê°ì§€
        onAuthStateChanged(auth, (user) => {
            if (user) {
                showAdminPanel(user);
            } else {
                showLogin();
            }
        });

        // ë¡œê·¸ì¸/ë¡œê·¸ì•„ì›ƒ í•¨ìˆ˜
        window.signInWithGoogle = async () => {
            try {
                const result = await signInWithPopup(auth, provider);
                console.log('ê´€ë¦¬ì ë¡œê·¸ì¸ ì„±ê³µ:', result.user);
            } catch (error) {
                console.error('ë¡œê·¸ì¸ ì‹¤íŒ¨:', error);
                alert('ë¡œê·¸ì¸ì— ì‹¤íŒ¨í–ˆìŠµë‹ˆë‹¤.');
            }
        };

        window.signOut = async () => {
            try {
                await firebaseSignOut(auth);
            } catch (error) {
                console.error('ë¡œê·¸ì•„ì›ƒ ì‹¤íŒ¨:', error);
            }
        };

        // í™”ë©´ ì „í™˜
        function showLogin() {
            document.getElementById('loginSection').style.display = 'block';
            document.getElementById('adminContent').style.display = 'none';
        }

        function showAdminPanel(user) {
            document.getElementById('loginSection').style.display = 'none';
            document.getElementById('adminContent').style.display = 'block';
            
            document.getElementById('adminName').textContent = user.displayName || 'ê´€ë¦¬ì';
            document.getElementById('adminEmail').textContent = user.email;
            document.getElementById('adminAvatar').src = user.photoURL || 'https://via.placeholder.com/50';
            
            window.adminPanel.initialize();
        }

        // íƒ­ ì „í™˜
        window.switchTab = (tab) => {
            window.adminPanel.currentTab = tab;
            
            document.querySelectorAll('.tab-btn').forEach(btn => btn.classList.remove('active'));
            document.querySelectorAll('.tab-content').forEach(content => content.classList.remove('active'));
            
            document.querySelector(`[data-tab="${tab}"]`).classList.add('active');
            document.getElementById(`${tab}Tab`).classList.add('active');
        };
    </script>
</body>
</html>
